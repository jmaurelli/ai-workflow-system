{
  "automation_modes": {
    "guided": {
      "description": "Maximum enterprise oversight - stop at every major governance gate",
      "gate_behavior": "require_all_enterprise",
      "risk_tolerance": "minimal_enterprise",
      "auto_proceed": false,
      "compliance_validation": "required",
      "gates": {
        "mvp_to_scaling_transition": "required",
        "enterprise_design_decisions": "required",
        "enterprise_srs_generation": "required", 
        "enterprise_prd_creation": "required",
        "enterprise_design_analysis": "required",
        "enterprise_task_creation": "required",
        "enterprise_task_implementation": "required_with_approval_board",
        "enterprise_completion_summary": "required",
        "enterprise_history_update": "optional"
      }
    },
    "autonomous": {
      "description": "Balanced enterprise oversight - proceed automatically with enterprise safety checks",
      "gate_behavior": "enterprise_risk_based",
      "risk_tolerance": "moderate_enterprise",
      "auto_proceed": true,
      "compliance_validation": "automated_where_possible",
      "gates": {
        "mvp_to_scaling_transition": "optional",
        "enterprise_design_decisions": "required_for_new_architecture",
        "enterprise_srs_generation": "required_for_compliance_changes",
        "enterprise_prd_creation": "optional",
        "enterprise_design_analysis": "optional",
        "enterprise_task_creation": "optional", 
        "enterprise_task_implementation": "required_for_production_changes",
        "enterprise_completion_summary": "optional",
        "enterprise_history_update": "skip"
      }
    },
    "learning": {
      "description": "Adaptive enterprise oversight - learns from approval patterns and enterprise governance requirements",
      "gate_behavior": "adaptive_enterprise_learning",
      "risk_tolerance": "adaptive_enterprise",
      "auto_proceed": "contextual_enterprise",
      "compliance_validation": "learn_from_compliance_history",
      "gates": {
        "mvp_to_scaling_transition": "learn_from_history",
        "enterprise_design_decisions": "learn_from_architecture_history",
        "enterprise_srs_generation": "learn_from_compliance_history",
        "enterprise_prd_creation": "learn_from_stakeholder_history",
        "enterprise_design_analysis": "learn_from_system_history",
        "enterprise_task_creation": "learn_from_coordination_history",
        "enterprise_task_implementation": "always_required_for_production",
        "enterprise_completion_summary": "learn_from_reporting_history",
        "enterprise_history_update": "learn_from_strategic_history"
      },
      "learning_thresholds": {
        "approval_rate_for_auto": 0.9,
        "minimum_history_samples": 5,
        "confidence_threshold": 0.95,
        "compliance_confidence_threshold": 0.98
      }
    }
  },
  "enterprise_risk_assessment": {
    "low_risk_indicators": [
      "incremental_feature_enhancement",
      "proven_enterprise_technology_stack",
      "well_tested_enterprise_patterns",
      "single_service_modification",
      "backward_compatible_changes",
      "performance_optimization_within_budgets"
    ],
    "high_risk_indicators": [
      "new_microservice_introduction",
      "breaking_api_changes_cross_service",
      "database_schema_changes_multi_tenant",
      "external_service_integration_enterprise",
      "security_model_changes_organization_wide",
      "performance_critical_changes_system_wide",
      "compliance_framework_changes",
      "multi_team_coordination_required",
      "design_system_breaking_changes",
      "architecture_pattern_modifications"
    ],
    "destructive_actions": [
      "production_database_migrations",
      "service_deployments_to_production",
      "external_api_calls_with_side_effects",
      "config_changes_production_enterprise",
      "user_data_migrations",
      "security_policy_changes",
      "compliance_audit_trail_modifications",
      "design_system_breaking_updates",
      "cross_service_api_contract_changes"
    ],
    "compliance_critical_actions": [
      "user_data_handling_changes",
      "security_model_modifications",
      "audit_trail_implementations", 
      "compliance_reporting_changes",
      "data_retention_policy_updates",
      "access_control_modifications"
    ]
  },
  "enterprise_workflow_execution": {
    "numbered_sequence": [
      "s01-mvp-to-scaling-transition.md",
      "s02-gen-design-decisions-scaling.md",
      "s03-gen-srs-scaling.md", 
      "s04-create-prd-scaling.md",
      "s05-gen-design-scaling.md",
      "s06-tasks-and-testing-scaling.md",
      "s07-gen-enterprise-completion-summary.md",
      "s08-gen-enterprise-history.md"
    ],
    "phase_mapping": {
      "transition": ["s01"],
      "architecture": ["s02", "s03", "s04"],
      "implementation": ["s05", "s06"], 
      "completion": ["s07", "s08"]
    },
    "dependency_chain": {
      "s01": [],
      "s02": ["s01"],
      "s03": ["s02"],
      "s04": ["s02", "s03"],
      "s05": ["s04"],
      "s06": ["s02", "s03", "s04", "s05"],
      "s07": ["s06"],
      "s08": ["s07"]
    }
  },
  "enterprise_quality_gates": {
    "automated_validation": {
      "document_structure_check": true,
      "required_sections_present": true,
      "context_references_valid": true,
      "enterprise_manifest_consistency": true,
      "compliance_section_validation": true,
      "architecture_decision_completeness": true,
      "multi_team_coordination_check": true
    },
    "manual_validation_triggers": {
      "enterprise_scope_exceeds_threshold": "prd_word_count > 1500",
      "new_architecture_pattern_detected": "architecture_differs_from_history",
      "high_risk_enterprise_changes": "risk_score > 0.8",
      "compliance_impact_detected": "compliance_requirements_changed",
      "multi_service_coordination_required": "coordination_complexity > moderate",
      "design_system_breaking_changes": "design_system_version_major_change",
      "performance_budget_strict_requirements": "srs_performance_budgets_enterprise_strict"
    },
    "approval_board_triggers": {
      "architecture_review_required": "new_service_or_major_architecture_change",
      "security_review_required": "security_model_changes_or_compliance_impact",
      "design_system_review_required": "design_system_breaking_changes_detected",
      "performance_review_required": "performance_budget_changes_significant"
    }
  },
  "enterprise_governance": {
    "multi_team_coordination": {
      "coordination_modes": ["single_team", "cross_team", "enterprise_wide"],
      "approval_gates": {
        "single_team": ["team_lead_approval"],
        "cross_team": ["team_lead_approval", "architecture_review"],
        "enterprise_wide": ["team_lead_approval", "architecture_review", "security_review", "design_system_compliance"]
      }
    },
    "compliance_frameworks": {
      "supported": ["GDPR", "SOC2", "PCI", "HIPAA", "ISO27001"],
      "validation_required": true,
      "audit_trail_mandatory": true
    },
    "enterprise_documentation": {
      "feature_directory_structure": "/enterprise-features/YYYY-MM-DD-feature-name/",
      "manifest_file": "feature-manifest.json",
      "artifacts_structure": {
        "architecture_diagrams": "artifacts/architecture-diagrams/",
        "api_contracts": "artifacts/api-contracts/",
        "design_system": "artifacts/design-system/",
        "performance_reports": "artifacts/performance-reports/",
        "security_audits": "artifacts/security-audits/",
        "integration_tests": "artifacts/integration-tests/",
        "deployment_configs": "artifacts/deployment-configs/",
        "monitoring_dashboards": "artifacts/monitoring-dashboards/"
      }
    }
  },
  "user_preferences": {
    "default_mode": "guided",
    "trusted_enterprise_technology_stacks": [],
    "enterprise_approval_history": [],
    "enterprise_learning_confidence": {},
    "custom_enterprise_gate_overrides": {},
    "compliance_preferences": {
      "primary_framework": null,
      "audit_level": "standard",
      "approval_board_size": "standard"
    }
  }
}
