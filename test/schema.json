{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Test Result Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "test_name",
    "status",
    "run_time_seconds",
    "error_message"
  ],
  "properties": {
    "test_name": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]{1,255}$"
    },
    "status": {
      "type": "string",
      "enum": ["passed", "failed", "skipped"]
    },
    "run_time_seconds": {
      "type": "number"
    },
    "error_message": {
      "type": ["string", "null"]
    }
  }
}

